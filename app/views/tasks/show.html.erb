<h1><%= @task.title %></h1>

<p> Details: <%= @task.details %> </p>
<p> This task is <%= @task.completed %> </p>

<p><%= link_to 'Edit task', edit_task_path %></p>
<p><%= link_to 'Back to list', tasks_path %></p>
<p><%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
</p>
